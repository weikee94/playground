{
  "name": "@weikee/form-core",
  "version": "0.1.0",
  "description": "Framework-agnostic form state management with Proxy-based subscription tracking",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:demo": "vite build",
    "dev": "vite",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "form",
    "state-management",
    "proxy",
    "reactive",
    "vanilla-js"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.9.0",
    "vite": "^6.0.0"
  }
}
